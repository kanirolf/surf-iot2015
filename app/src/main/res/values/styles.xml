<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- Style for elements gathered in a horizontal LinearLayout whose sizes are determined by
         weight -->
    <style name="LinearLayoutHorizontalWeighted">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Style for elements gathered in a vertical LinearLayout whose sizes are determined by
         weight -->
    <style name="LinearLayoutVerticalWeighted">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!-- CheckBandPaired and CheckBandOn -->

        <style name="CheckBand_TopCircularImage">
            <item name="android:layout_weight">0.5</item>
            <item name="android:scaleType">fitCenter</item>
            <item name="android:background">@android:color/transparent</item>
        </style>x

        <style name="CheckBand_TextWarning">
            <item name="android:layout_weight">0.15</item>
            <item name="android:paddingTop">15dp</item>
            <item name="android:paddingBottom">15dp</item>

            <item name="android:textColor">#ffffff</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">20dp</item>
        </style>

        <style name="CheckBand_TextInstructionsContainer">
            <item name="android:layout_weight">0.3</item>

            <item name="android:background">@drawable/round20dpwhite_bkgd</item>

            <item name="android:orientation">vertical</item>

            <item name="android:paddingLeft">20dp</item>
            <item name="android:paddingRight">20dp</item>
            <item name="android:paddingTop">15dp</item>
            <item name="android:paddingBottom">15dp</item>
        </style>

        <style name="CheckBand_TextInstruction">

            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>

            <item name="android:textSize">18dp</item>
            <item name="android:textColor">#7d7d7d</item>

        </style>

    <!-- SensorDataConsole -->

        <!-- Styles for left side of each display -->

        <!-- Style for the actual, numerical data -->
        <style name="SensorDataConsole_Data">

            <item name="android:textSize">40dp</item>
            <item name="android:textColor">#ffffff</item>

            <item name="android:fontFamily" >sans-serif-light</item>

            <item name="android:gravity">center</item>
        </style>

        <!-- Style for the label that identifies the units the data represents -->
        <style name="SensorDataConsole_DataUnits">
            <item name="android:fontFamily" >sans-serif</item>

            <item name="android:textStyle">bold</item>
            <item name="android:textSize">15dp</item>
            <item name="android:textColor">#ffffff</item>

            <item name="android:gravity">center</item>
        </style>

        <!-- Styles for right side of display -->
        <style name="SensorDataConsole_DataIdentifier">
            <item name="android:textSize">25dp</item>
            <item name="android:textColor">#666666</item>

            <item name="android:fontFamily">sans-serif-light</item>

            <item name="android:gravity">center_vertical|right</item>

            <item name="android:lineSpacingMultiplier">0.8</item>
        </style>

</resources>
