
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    tools:context=".MainActivity"

    android:padding="0dp"
    android:layout_margin="0dp"

    >\

    <ImageButton android:id="@+id/startPairButton"

        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="0.5"

        android:src="@drawable/band_is_off"
        android:background="#dddddd"
        android:scaleType="fitCenter"

        android:padding="20dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"

        android:background="#eeeeee"

        android:textStyle="bold"
        android:textSize="20dp"

        android:text="The Microsoft Band is currently not being worn."

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="0.3"

        android:background="#ffffff"

        android:orientation="vertical"

        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="18dp"

            android:layout_marginBottom="10dp"

            android:text="Please ask a parent or guardian to assist you in putting on your Microsoft Band."

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="18dp"

            android:text="The app will continue when the Band is put on."

            />

    </LinearLayout>

</LinearLayout>
