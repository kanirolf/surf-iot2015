<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_weight="26.5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:background="#e6e6e6"
            android:gravity="center"
            android:layout_weight="3.5"
            android:id="@+id/editReminderButton">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/settings"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:weightSum="30">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Reminder #1"
                android:id="@+id/reminderName"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:layout_weight="20" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView5"
                android:src="@drawable/alarm"
                android:layout_marginLeft="10dp"
                android:layout_weight="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anytime"
                android:id="@+id/activeTime"
                android:textIsSelectable="false"
                android:textSize="12dp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical|left" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/sensorsUsed"
            android:background="@android:color/transparent"
            android:weightSum="30"></LinearLayout>
    </LinearLayout>
</RelativeLayout>