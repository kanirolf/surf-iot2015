<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="48"
    android:orientation="vertical"

    tools:context="lab.star.surf_iot2015.DataDetailsActivity"
    android:background="@color/negative">

    <fragment android:name="lab.star.surf_iot2015.data_card_fragment.HeartRateCardFragment"

        android:layout_height="0dp"
        android:layout_width="match_parent"

        android:layout_weight="8"
        tools:layout="@layout/fragment_data_card"
        android:id="@+id/dataCard" />

    <fragment android:name="lab.star.surf_iot2015.data_settings_fragment.HeartRateSettingsFragment"

        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="30"
        tools:layout="@layout/fragment_data_settings"
        android:id="@+id/dataDetails" />


</LinearLayout>
